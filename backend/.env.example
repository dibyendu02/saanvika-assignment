# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Atlas Connection
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# JWT Configuration
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-in-production-64-chars-minimum
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# GPS Configuration
# Radius in meters within which employees must be to mark attendance
OFFICE_ATTENDANCE_RADIUS_METERS=200

# Firebase Cloud Messaging Configuration
# Path to Firebase service account JSON file (relative to project root)
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json
# Or use inline JSON (not recommended for production)
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}
